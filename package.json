{
  "name": "Craft-Inertia",
  "version": "1.0.0",
  "description": "Proof of concept Vue/Inertia app powered by Craft CMS",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "webpack --config webpack.config.js",
    "watch": "webpack  --config webpack.config.js --watch",
    "prod": "webpack --config webpack.config.js --optimize-minimize --mode production",
    "css-dev": "npx tailwindcss -i ./modules/frontend/src/css/app.css -o ./web/assets/inertia/css/app.css --watch",
    "css-prod": "npx tailwindcss -i ./modules/frontend/src/css/app.css -o ./web/assets/inertia/css/app.css --minify"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@inertiajs/inertia": "^0.1.7",
    "@inertiajs/inertia-vue": "^0.1.2",
    "@inertiajs/progress": "^0.2.6",
    "lodash": "^4.17.21",
    "popper.js": "^1.16.1",
    "portal-vue": "^2.1.7",
    "tailwindcss": "^3.1.4",
    "vue": "^2.6.11",
    "vue-meta": "^2.3.3"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "autoprefixer": "^9.8.8",
    "cross-env": "^7.0.2",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "minimist": "^1.2.6",
    "postcss": "^8.4.14",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "style-loader": "^1.1.3",
    "vue-loader": "^15.9.8",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.10"
  }
}
